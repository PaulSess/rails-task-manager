<div class="new">
  <h1><%= @task.title %></h1>

    <div class="mx-auto">
      <%= form_with model: @task do |f| %>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
        <%= f.label :details %> <br>
        <%= f.text_field :details %>
        <%= f.label :completed %>
        <%= f.check_box :completed %> <br>
        <%= f.submit %>
      <% end %>
    </div>

  <div class="btn btnC mt-4">
    <%= link_to "back to list", tasks_path %>
  </div>
</div>
