
<div class="container d-flex flex-column mt-5 new1">
    <h1 class="fw-bold mt-3">Tasks</h1>
    <%  @tasks.each do |task| %>
      <div class="mt-3">
        <input type="checkbox" name="tasks">
        <label for="tasks"><%= link_to task.title, task_path(task) %></label> <br>
        <i class="fa-solid fa-trash" style="font-size: 15px;"></i><%= link_to "Delete", delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </div>
    <% end %>
</div>
  <div class="d-flex justify-content-center">
    <div class="btn btnC " width="280px">
      <%= link_to "+ Add new Task to your list", tasks_new_path %>
    </div>
  </div>
