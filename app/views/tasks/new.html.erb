<div class="container new">
  <h1>New Task</h1>
    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_field :details %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    <div class="mt-1">
      <%= f.submit %>
    </div>
    <% end %>
</div>

  <div class="btnC btn fixed-bottom" >
    <%= link_to "back to list", tasks_path %>
  </div>
